{
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",                           
    "esModuleInterop": true,                                                    
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "resolveJsonModule": true,
  }
}
